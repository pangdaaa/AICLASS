.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #efeff3;
}

.usermag {
  width: 100%;
  height: 450rpx;
  background-color: white;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userlist {
  width: 100%;
  top: 480rpx;
  height: 360rpx;
  background-color: white;
  position: absolute;
}

.userinfo {
  top: 60rpx;
  position: absolute;
}

.userinfo-avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  top: 250rpx;
  position: absolute;
  font-size: 32rpx;
  color: silver;
}

.teacher-auth {
  top: 320rpx;
  position: absolute;
  font-size: 24rpx;
  color: white;
  background-color: silver; 
}

.item {
  width: 90%;
  height: 90rpx;
  margin: 30rpx 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
 }

 .logo {
   position: absolute;
  top: 930rpx;
  display: block;
  width: 100px;
  height: 80rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
}

.getInfo{
  top: 1000rpx;
  width:200px; 
  position: absolute;
  background-color:#efeff3; 
  font-size:14px;
  color:#707070;  
}


.getInfo::after{  
  border:1px solid #efeff3;  
}  