/* pages/currDetail/currDetail.wxss */

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #efeff3;
}

.currname {
  width: 100%;
  height: 80rpx;
  background-color: white;
  position: absolute;
  padding: 20rpx;
}

.msg {
  margin: 10rpx 25rpx 0 25rpx;
  display: flex;
  justify-content: space-between;
}

.rate {
  display: flex;
  margin: 20rpx 0 0 20rpx;
  font-size: 16px;
  color: #888;
}

.chart {
  width: 100%;
  height: 83%;
  top: 150rpx;
  background-color: white;
  position: absolute;
}

.canvas {
  width: 100%;
  height: 450rpx;
  top: 20rpx;
}

.items {
  width: 100%;
  padding-left: 30rpx;
  justify-content: center;
}

.item {
  width: 90%;
  margin-top: 20rpx;
  text-align: center;
  font-size: 16px;
  height: 90rpx;
  border-bottom: 2rpx outset #efeff3;
}
